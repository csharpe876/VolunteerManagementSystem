<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Volunteer Management System</display-name>
    <description>Web application for managing volunteers at FST Guild Committee</description>

    <!-- Context Parameters -->
    <context-param>
        <param-name>db.url</param-name>
        <param-value>jdbc:mysql://localhost:3306/volunteer_management_system</param-value>
    </context-param>
    <context-param>
        <param-name>db.username</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>db.password</param-name>
        <param-value>password</param-value>
    </context-param>

    <!-- Servlet Mappings -->
    <servlet>
        <servlet-name>VolunteerController</servlet-name>
        <servlet-class>com.fstgc.vms.controller.VolunteerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VolunteerController</servlet-name>
        <url-pattern>/api/volunteers/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EventController</servlet-name>
        <servlet-class>com.fstgc.vms.controller.EventController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EventController</servlet-name>
        <url-pattern>/api/events/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AttendanceController</servlet-name>
        <servlet-class>com.fstgc.vms.controller.AttendanceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AttendanceController</servlet-name>
        <url-pattern>/api/attendance/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TimesheetController</servlet-name>
        <servlet-class>com.fstgc.vms.controller.TimesheetController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TimesheetController</servlet-name>
        <url-pattern>/api/timesheets/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AnnouncementController</servlet-name>
        <servlet-class>com.fstgc.vms.controller.AnnouncementController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AnnouncementController</servlet-name>
        <url-pattern>/api/announcements/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AwardController</servlet-name>
        <servlet-class>com.fstgc.vms.controller.AwardController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AwardController</servlet-name>
        <url-pattern>/api/awards/*</url-pattern>
    </servlet-mapping>

    <!-- CORS Filter -->
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.fstgc.vms.util.CorsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.html</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.html</location>
    </error-page>
</web-app>